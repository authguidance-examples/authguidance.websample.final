{
  "name": "finalspa",
  "version": "3.0.0",
  "description": "The Final SPA, which implements OpenID Connect using an API driven Back End for Front End",
  "main": "index.tsx",
  "keywords": [],
  "author": "Gary Archer",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "npx eslint . --ext .ts,.tsx",
    "build": "npm run clean && npm run copy && npm run webpackDebug",
    "start": "npm run clean && npm run copy && npm run webpackWatch",
    "buildRelease": "npm run clean && npm run copy && npm run webpackRelease",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "cp spa.config.json index.html *.css favicon.ico dist",
    "webpackDebug": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' webpack --config webpack/webpack.config.dev.ts",
    "webpackWatch": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' webpack --config webpack/webpack.config.dev.ts --watch",
    "webpackRelease": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' webpack --config webpack/webpack.config.prod.ts"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "guid-typescript": "^1.0.9",
    "js-event-bus": "^1.1.1",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.5.0",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/react-modal": "^3.13.1",
    "@types/url-parse": "^1.4.8",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.31.11",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
