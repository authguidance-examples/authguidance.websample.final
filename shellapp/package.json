{
  "name": "shellspa",
  "version": "1.0.0",
  "description": "A plain Javascript SPA as the micro-UI shell application",
  "main": "index.tsx",
  "keywords": [],
  "author": "Gary Archer",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "npx eslint . --ext .ts,.tsx",
    "start": "npm run webpackWatch",
    "build": "bash ./build.sh",
    "buildRelease": "bash ./build.sh RELEASE",
    "webpackDebug": "bash -c \"NODE_OPTIONS='--loader ts-node/esm --no-warnings' webpack --config webpack/webpack.config.dev.ts\"",
    "webpackWatch": "bash -c \"NODE_OPTIONS='--loader ts-node/esm --no-warnings' webpack --config webpack/webpack.config.dev.ts --watch\"",
    "webpackRelease": "bash -c \"NODE_OPTIONS='--loader ts-node/esm --no-warnings' webpack --config webpack/webpack.config.prod.ts\"",
    "purgecss": "purgecss -c purgecss.config.cjs -o dist"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "guid-typescript": "^1.0.9",
    "moment": "^2.29.4",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.2",
    "@types/node": "^18.11.18",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "purgecss": "^5.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
